#!/usr/bin/env bash

export DOTFILES="$HOME/.dotfiles"

add_to_path() {
    local path="$("$DOTFILES/bin/add_to_path.py" "$1")"

    if [[ ! "$path" = "" ]]; then
        export PATH="$path"
    fi
}

declare -a paths=(
    "/usr/local/bin"
    "/usr/local/sbin"
    "$HOME/bin"
    "$HOME/.dotfiles/bin"
    "$HOME/.flatpak_aliases"
    "$HOME/.local/bin"
    "$DOTFILES/bin"
    "$HOME/.rvm/bin"
    "$HOME/.npm-global/bin"
    "/usr/local/go/bin"
    "$HOME/go/bin"
    "$HOME/go"
)

for i in "${paths[@]}"
do
    add_to_path "$i"
done

export ENV_LOADED="1"

