#!/usr/bin/env bash

screenshot_dir=$HOME/box/pic/screenshots

mkdir -p "$screenshot_dir"

error() {
    >&2 echo "$1"
    exit 1
}

ensure_installed() {
    which "$1" >/dev/null
    local ret_val=$?
  
    if [[ ! $ret_val -eq 0 ]]; then
        error "$1 is not installed..."
    fi
}

filename=$screenshot_dir/$(date +%Y%m%d_%H%M%S).png

ensure_installed scrot
scrot -s "$filename"

if [[ -e $filename ]]; then
    ensure_installed feh
    feh "$filename"
fi

